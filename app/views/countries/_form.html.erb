

<%= form_for @country do |f| %>
  <p>
    <br>
    <br>
    <%= f.label :name %>
    <%= f.text_field :name, :required => true %>
  </p>
  <p>
    <%= f.label :top_facts %>
    <%= f.text_field :top_facts, :required => true %>
  </p>
  <p>
    <%= f.label :highlights %>
    <%= f.text_field :highlights, :required => true %>
  </p>
  <p>
    <%= f.label :weather %>
    <%= f.text_field :weather, :required => true %>
  </p>
  <p>
    <%= f.label :image %>
    <%= f.text_field :image, :required => true %>
  </p>

  <%= f.submit "Submit", :class => "submit_format" %>
<% end %>
