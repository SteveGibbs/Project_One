<!DOCTYPE html>
<html>
<head>
  <title>TravelsApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="//fonts.googleapis.com/css?family=Lato|Montserrat|Acme" rel="stylesheet">
</head>
<body class="<%= params[:controller] %> <%= params[:action] %>">

  <% if session[:important] %>
  <h1><%= session[:important] %></h1>
  <%end %>

  <% if flash[:success] %>
  <h1>
    <%= flash[:success] %>
  </h1>
  <% end %>

  <% if flash[:error] %>
  <h1>
    <%= flash[:error] %>
  </h1>
  <% end %>


  <nav>
<%= link_to("Home", pages_home_path()) %>
<%= link_to "Countries", "/countries" %>
<%= link_to "Cities", "/cities" %>
<%= link_to "Tours", "/tours" %>

  <% unless @current_user.present? %>
  <%= link_to("Login", login_path()) %>
  <%= link_to("SignUp", new_user_path()) %>
  <%else %>
  <%= link_to("Edit your profile", edit_user_path(@current_user.id)) %>
  <%= link_to("Log out #{@current_user.first_name} #{@current_user.last_name}", logout_path(), :method => :delete) %>

  You are logged in as <%= ("#{@current_user.first_name} #{@current_user.last_name}") %>
  <% end %>


  </nav>


<div class="container">





  <div class="push-footer">
    <br>
  </div>



  <%= yield %>

  <footer>
    <p class="footer-style">Remarkable Voyages is a simple travel website created as an educational project for General Assembly's Web Development Immersive Course by Stephen Gibbs</p>
  </footer>



  </div>





</body>
</html>
