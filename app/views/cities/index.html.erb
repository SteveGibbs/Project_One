<h1>CITY BREAKS</h1>
<!-- <p>Find me in app/views/cities/index.html.erb</p> -->

<ul>
    <div class="container--grid">

        <% @cities.each do |a| %>
        <li class="list--grid-medium">
            <div class="box-medium">

                <h5>
                    <%= link_to(a.name.upcase, "/cities/#{a.id}") %>
                </h5>

                    <p></p>
                    <div class="image-medium">
                        <%= image_tag(a.image) %>
                    </div>
            </div>
        </li>

        <% end %>
    </div>
</ul>
