<% unless @user.errors.full_messages.empty? %>
<% @user.errors.full_messages.each do |error| %>
<p><%= error %></p>
<% end %>
<% end %>

<div class="sign">

    <h1>Profile</h1>

    <%= form_for @user do |f| %>
<br>
        <%= f.label :title %>
        <%= f.text_field :title, :required => true, :maxlength => 7, :size => 20 %>
        <%= f.label :first_name %>
        <%= f.text_field :first_name, :required => true %>
        <%= f.label :last_name %>
        <%= f.text_field :last_name, :required => true %>
        <%= f.label :email %>
        <%= f.email_field :email, :required => true %>
        <%= f.label :dob, "Date of Birth" %>
        <%= f.date_field :dob, :required => true %>
        <%= f.label :contact_number %>
        <%= f.text_field :contact_number, :required => true, :minlength => 7, :maxlength => 12, :size => 20 %>
        <%= f.label :address_line_1 %>
        <%= f.text_field :address_line_1, :required => true %>
        <%= f.label :address_line_2 %>
        <%= f.text_field :address_line_2 %>
        <%= f.label :suburb %>
        <%= f.text_field :suburb, :required => true %>
        <%= f.label :state %>
        <%= f.text_field :state, :required => true %>
        <%= f.label :postcode %>
        <%= f.text_field :postcode, :required => true %>
        <%= f.label :diet, "Special Dietary Requirements" %>
        <%= f.text_field :diet %>
    <%= f.label :medical_condition, "Any Medical Conditions" %>
    <%= f.text_field :medical_condition %>
    <%= f.label :password %>
    <%= f.password_field :password, :required => true%>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :required => true%>

<%= f.submit "Submit", :class => "submit_format"%>
<%end %>

</div>
